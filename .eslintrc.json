{
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 8
  },
  "rules": {
    "linebreak-style": ["error", "windows"],
    "max-len": ["error", { "code": 160 }],
    "no-plusplus": ["warn", { "allowForLoopAfterthoughts": true }],
    "no-console": "warn"
  },
  "env": { "es6": true }
}
